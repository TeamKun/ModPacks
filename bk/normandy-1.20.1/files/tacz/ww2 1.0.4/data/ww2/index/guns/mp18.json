{
    // 枪械的显示名称，支持本地化
    "name": "ww2.gun.mp18.name",
    // 枪械效果文件
    "display": "ww2:mp18_display",
    // 枪械参数文件
    "data": "ww2:mp18_data",
    // 枪械文本提示
    "tooltip": "ww2.gun.mp18.desc",
    // 枪械种类，用于创造标签栏归类。
    "type": "smg",
    // 枪械的物品类型，决定枪械的逻辑，如开火、装填等，默认是 modern_kinetic (现代动能枪械)
    "item_type": "modern_kinetic",
    // 排序数，决定了在创造模式标签页中的顺序
    // 数字越小，优先级越高
    "sort": 1
}