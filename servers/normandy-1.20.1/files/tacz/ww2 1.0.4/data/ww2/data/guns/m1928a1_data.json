{
  // 指定枪械弹药
  "ammo": "tacz:45acp",
  // 弹容
  "ammo_amount": 20,
  // 扩容弹夹弹药总数
  "extended_mag_ammo_amount": [
    30,
1,
1
  ],
  // 枪栓类型：开膛待机（open_bolt）、闭膛待击（closed_bolt）、手动上膛（manual_action)
  "bolt": "open_bolt",
  // 每分钟射出弹药量，最大不应超过 1200
  "rpm": 800,
  // 子弹实体属性
  "bullet": {
    // 寿命，单位秒
    "life": 1,
    // 用于霰弹，默认为 1，每发的伤害 / bullet_amount，每次射击扣除一发子弹
    "bullet_amount": 1,
    // 伤害
    "damage": 8.5,
    // 曳光弹间隔数量，没有此字段则不发射曳光弹
    // 设置为 0 则是每发都是曳光弹
    "tracer_count_interval": 0,
    // 额外伤害的内容，为空则表示没有任何额外伤害计算内容
    "extra_damage": {
      // 护甲穿透率，默认为 0，也就是没有穿甲伤害
      "armor_ignore": 0.12,
      // 爆头伤害 x1.5
      "head_shot_multiplier": 1.25,
      // 距离-伤害分段常函数
      "damage_adjust": [
        // 这样就能写抵近伤害了
        {"distance": 1, "damage": 9},
        {"distance": 10, "damage": 8.5},
        {"distance": 25, "damage": 7.5},
        {"distance": 50, "damage": 7},
        // 如果你忘记写这个无穷，那么超过上述距离，我就认为是 0
        {"distance": "infinite", "damage": 4}
      ]
    },
    // 速度 m/s
    "speed": 250,
    // 重力
    "gravity": 0.098,
    // 击退效果
    "knockback": 0,
    // 阻力
    "friction": 0.02,
    // 点燃目标
    "ignite": false,
    // 点燃时间，默认为 2 秒，仅用于实体
    "ignite_entity_time": 2,
    // 穿透数
    "pierce": 1
    // 是否爆炸，没有此字段时为 false
    //"explosion": {
    //  延时爆炸，单位：秒
    //  "delay": 5
    //  "radius": 5,
    //  "damage": 5,
    //  爆炸导致的击退，默认为 false，需要服务器也开启爆炸击退才能使用
    //  "knockback": false
    //}
  },
  // 换弹相关
  "reload": {
    // magazine 是弹匣供弹，manual 是手动供弹
    "type": "magazine",
    // 弹匣供弹换弹时长（秒），到达此时间点，服务端就更新枪内子弹数量
    "feed": {
      // 空仓换弹
      "empty": 1.54,
      // 战术换弹
      "tactical": 1.54
    },
    // 弹匣供弹总时长（秒），到达此时间点，枪械才可以进行开火、检视等行为。
    "cooldown": {
      // 空仓换弹
      "empty": 2.0833,
      // 战术换弹
      "tactical": 2.0833
    }
  },
  // 枪械抬起的动作时长，单位秒。
  // 抬起动作完成后，枪械可以进行开火、检视等行为
  "draw_time": 0.53,
  // 收枪的动作时长，单位秒。
  "put_away_time": 0.47,
  // 瞄准时长，单位秒。
  "aim_time": 0.15,
  "sprint_time": 0.15,
  "weight": 4.8,
  "movement_speed": {
    "base": 0.0,
    "aim": -0.1,
    "reload": 0
  },
  // 拉栓上膛的时间，仅当枪栓类型为 manual_action 时有效
  // "bolt_action_time": 0.9,
  // 开火模式
  "fire_mode": [
    "auto",
    // 半自动
    "semi"
  ],
  // 多连续发数据，仅多连发会调用
  "burst_data": {
    // 是否连续射击
    "continuous_shoot": true,
    // 连发数
    "count": 3,
    // 组内连发的射速
    "bpm": 900,
    // 每组连发之间的时间间隔（上一组结束时间到下一组开始的时间间隔），单位秒
    "min_interval": 0.3
  },
  // 后坐力
  "recoil": {
    "pitch": [
      {"time": 0, "value": [0.9, 0.9]},
      {"time": 0.25, "value": [0.9, 0.9]},
      {"time": 0.45, "value": [-0.1, -0.1]},
      {"time": 0.6, "value": [0, 0]}
    ],
    "yaw": [
      {"time": 0, "value": [-0.15, -0.1]},
      {"time": 0.25, "value": [-0.65, 0.1]},
      {"time": 0.45, "value": [0, 0]}
    ]
  },
  // 受伤晃动幅度修改，乘数，1 为原版晃动程度，0 为完全不晃动，默认为 0.05
  "hurt_bob_tweak_multiplier": 0.04,
  // 不准确度
  "inaccuracy": {
    // 站立射击散布
    "stand": 2,
    // 移动射击散布
    "move": 3.2,
    // 潜行射击散布
    "sneak": 2.5,
    // 趴下射击散布
    "lie": 2.2,
    // 瞄准射击时散布
    "aim": 0.15
  },
  // 近战相关
  "melee": {
    // 枪械距离参数，用来延升近战攻击范围
    // 会与刺刀等配件的距离做加和
    "distance": 1,
    // 使用时的冷却时间
    // 会与刺刀等配件的冷却时间做加和
    "cooldown": 0.7,
    // 默认近战数据，会被配件的数据替换掉
    "default": {
      // 动画类型：没有枪托的为 melee_push，有枪托的为 melee_stock
      "animation_type": "melee_push",
      // 刺刀距离参数，枪械里还有个刺刀攻击距离参数，两者做加和
      "distance": 0,
      // 刺刀范围角度
      "range_angle": 40,
      // 刺刀冷却时间，枪械里还有个刺刀冷却时间参数，两者做加和
      "cooldown": 0,
      // 伤害值
      "damage": 1,
      // 击退效果
      "knockback": 0.5,
      // 前摇时长，单位：秒
      "prep": 0.1
    }
  },
  // 开放的配件槽。未指定的槽位默认关闭。全部配件槽类型有:
  // scope, stock, muzzle, grip, laser, extended_mag
  "allow_attachment_types": [
   "stock",
"extended_mag"
  ],
  // 专属的配件属性
  "exclusive_attachments": {
    // 配件 ID，后面的数据和配件的 data 部分结构完全一致
    "tacz:scope_standard_8x": {
      "weight": 2.0,
      "ads_addend": 0.04,
      "inaccuracy_addend": -0.4,
      "recoil_modifier": {
        "pitch": -0.2,
        "yaw": -0.1
      }
    }
  }
}
